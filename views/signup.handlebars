<div class="hero">
    <div class="signup-box">
      <h1>Sign Up</h1>
          <p>Please fill in this form to create an account.</p>
       <form class="form signup-form">
            <div class="form-group">
                <label for="username"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="userName" required></input>
            </div>

            <div class="form-group">
               <label for="email"><b>Email</b></label>
               <input type="text" placeholder="Enter Email" name="email" required></input>
            </div>

            <div class="form-group">
               <label for="psw"><b>Password</b></label>
               <input type="password" placeholder="Enter Password" name="psw" required></input>
            </div>

            <div class="form-group">
               <label for="password-rpt"><b>Repeat Password</b></label>
               <input type="password" placeholder="Repeat Password" name="password-rpt" required></input>
            </div>

            <div class="form-group">
               <label>
               <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me </input>
               </label>
            </div>

            <div class="form-group">
               <button class="btn btn-primary" type="submit">Sign up</button>
            </div>
        </form>
   
    </div>
</div>