<div class="card">
    <div class="card-header">
      <h2>Login</h2>
      <form id="login-form" class="card-body">
         <div class="form-group">
            <label for="userEmail"><b>Email Address</b></label>
            <input type="text" placeholder="Enter Email Address" id="email" name="email address" required>
          </div>

          <div class="form-group">
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" id="password" name="psw" required>
          </div>

          <div class="form-group">
               <button type="submit" id="login-btn" class="btn" >Login</button>
           </div>
      </form>
    </div>
    <script src="js/login.js"></script>
</div>